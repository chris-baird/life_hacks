<p id="notice"><%= notice %></p>
<div id="show-wrap-main" class="container main-wrap-show panel-footer">
  <div class="container text-center show-title">
    <u><h2 id="show-name" class="text-center"><%= @hack.name %></h2></u>
    <p class="text-center">by: <%= @hack.user.name %></p>
    <hr>
  </div>
    <div id="show-container" class="container text-center hack-info-page">
    <div class="row">
      <div class="col-lg-12">
        <% if @hack.user == current_user %>
          <%= link_to 'Edit', edit_hack_path %>
          <%= link_to 'Delete', hack_path(@hack), method: :delete, data: { confirm: "are you sure you want to delete this Lifehack?"} %>
        <% end %>
        <p><%= image_tag @hack.image.url, class: "img-responsive show-img center-block" %></p>
      </div>
    </div>
    </div>
    <div id="hack-info-desc" class="col-lg-12 text-center">
      <u><h2>Description:</h2></u>
      <p><%= @hack.body %></p>
      <hr>
    </div>
  <div class="container">
    <% if current_user %>
    <div class="row">
      <div class="center-block">
        <%= form_for [@hack, @comment] do |form| %>
        <%= form.text_area :body, rows: '6', cols: '50', id: "comment-body", class: "comment-input form-control", placeholder: 'Write a comment!' %><br>
        <%= form.submit 'Submit Comment', id: "comment-btn", class: "center-block btn btn-primary" %>
      </div>
    </div>
    <% end %>
        <% end %>

    <ul class="text-center comment-wrap">
      <u><h3>Comments:</h3></u>
      <% @hack.comments.each do |c| %>
        <li>
          <div class="comment-body panel panel-primary">
            <div class="panel-heading">@<%= c.user.name %></div>
            <div class="panel-body"><%= c.body %></div>
            <% if c.user == current_user %>
              <%= link_to "edit", edit_comment_path(c) %> | <%= link_to "delete", comment_path(c), method: :delete, data: {confirm: 'Are you sure?'} %>
            <% end %>
            <hr>
          </div>
        </li>
      <% end %>
    </ul>

  </div>
</div>
