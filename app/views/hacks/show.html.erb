<p id="notice"><%= notice %></p>
<div class="container text-center">
  <h1><%= @hack.name %></h1>
</div>
<div class="container show-wrapper">
  <div id="show-container" class="container text-center hack-info-page">
    <div class="row">
      <div class="col-lg-6">
        <% if @hack.user == current_user %>
          <%= link_to 'Edit', edit_hack_path %>
          <%= link_to 'Delete', hack_path(@hack), method: :delete, data: { confirm: "are you sure you want to delete this Lifehack?"} %>
        <% end %>
        <p><%= image_tag @hack.image.url, class: "img-responsive" %></p>
      </div>
      <ul class="col-lg-6">
        <h4>Comments</h4>
        <hr>
        <% @hack.comments.each do |c| %>
          <li>
            <div>
              <p>@<%= c.user.name %> <small><%= c.body %></small></p>
              <% if c.user == current_user %>
                <%= link_to "edit", edit_comment_path(c) %> | <%= link_to "delete", comment_path(c), method: :delete, data: {confirm: 'Are you sure?'} %>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div id="hack-info-desc" class="col-lg-6">
    <p><%= @hack.body %></p>
  </div>

  <div class="container">
    <div class="row">
      <div class="text-center">
        <h3>Comment</h3>
        <%= form_for [@hack, @comment] do |form| %>
        <%= form.text_area :body, rows: '6', cols: '50' %><br>
        <%= form.submit 'Submit Comment' %>
      </div>
    </div>
        <% end %>
  </div>
</div>
