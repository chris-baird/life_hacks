<p id="notice" class="text-center"><%= notice %></p>

<div class="container main-wrap-index panel-footer">
  <ul class="nav nav-tabs">
    <form class="navbar-form navbar-right" role="search">
      <div class="form-group">
        <input type="text" class="form-control" placeholder="Search">
      </div>
      <button type="submit" class="btn btn-primary sub-nav">Search Life Hacks</button>
    </form>
    <li role="presentation" class="pull-left"><%= link_to "Create LifeHack", new_hack_path %></li>
    <li role="presentation" class="pull-right"><%= link_to "Date", hacks_path(sort: 'created_at', desc: @desc) %></li>
    <li role="presentation" class="pull-right"><%= link_to "Name", hacks_path(sort: 'name', desc: @desc) %></li>
    <li role="presentation" id="sub-nav" class="pull-right not-active"><a href="#">Sort By:</a></li>
  </ul>
    <div class="row text-center t-wrap">
    <% @hacks.each do |hack| %>
      <%= link_to hack_path(hack) do %>
        <div class="col-md-2 thumb-wrapper well well-sm">
          <u><h4><%= hack.name %></h4></u>
          <img src="<%= hack.image.url %>" class="img-responsive img-size thumbnail">
          <u><h5>@<%= hack.user.name %></h5></u>
        </div>
      <% end %>
    <% end %>
  </div>
</div>


